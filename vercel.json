{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "admin-dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/admin/assets/(.*)", "dest": "admin-dashboard/assets/$1" },
    { "src": "/admin(/.*)?", "dest": "admin-dashboard/index.html" }
  ]
}
